<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/languages_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:transitionName="@string/transition_toolbar"
        >
        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.nbsp.translator.ui.fragment.FragmentLanguagePicker"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/language_picker">
        </fragment>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_edit_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:transitionName="@string/transition_language_text_edit"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.nbsp.translator.widget.EditTextBackEvent
                android:id="@+id/language_edit_text"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="true"
                android:hint="белорусский"
                android:paddingStart="16dp"
                android:inputType="textFilter|textMultiLine"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/close_button" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clickable="true"
                android:background="@drawable/bg_clickable_circle"
                android:src="@drawable/ic_close_black"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/did_you_mean_text"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/language_edit_text"
                android:visibility="gone" />

        </RelativeLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/widget_result_translate" />

    </LinearLayout>

</FrameLayout>