<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:transitionName="@string/transition_toolbar"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_edit_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:transitionName="@string/transition_language_text_edit"
        >

        <com.nbsp.translator.widget.EditTextBackEvent
            android:id="@+id/language_edit_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:focusable="true"
            android:hint="белорусский"
            android:paddingStart="16dp"
            android:inputType="textFilter|textMultiLine"
            android:textSize="20sp"
            />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/widget_result_translate" />

    </LinearLayout>

</FrameLayout>