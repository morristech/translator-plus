<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="110"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="scaleX"
                android:duration="110"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="scaleY"
                android:duration="110"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"/>
        </set>
    </item>

    <item android:state_selected="false">
        <set>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="110"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="scaleX"
                android:duration="110"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="scaleY"
                android:duration="110"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"/>
        </set>
    </item>
</selector>