<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#757575</item>
    </style>

    <style name="LanguageSpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="ToolBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="Widget.AppTheme.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:theme">@style/ToolBarThemeOverlay</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainBottomButton">
        <item name="android:background">@drawable/bg_clickable_circle</item>
        <item name="android:tint">#717171</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Themes -->

    <style name="BlueTheme">
        <item name="android:colorPrimary">#198ADF</item>
        <item name="android:colorPrimaryDark">#1976D2</item>
    </style>

    <style name="RedTheme">
        <item name="android:colorPrimary">#F44336</item>
        <item name="android:colorPrimaryDark">#D50000</item>
    </style>

    <style name="IndigoTheme">
        <item name="android:colorPrimary">#3F51B5</item>
        <item name="android:colorPrimaryDark">#C51162</item>
    </style>

    <style name="PinkTheme">
        <item name="android:colorPrimary">#E91E63</item>
        <item name="android:colorPrimaryDark">#C51162</item>
    </style>

    <style name="CyanTheme">
        <item name="android:colorPrimary">#0097A7</item>
        <item name="android:colorPrimaryDark">#00B8D4</item>
    </style>

    <style name="GreenTheme">
        <item name="android:colorPrimary">#43A047</item>
        <item name="android:colorPrimaryDark">#1B5E20</item>
    </style>

    <style name="OrangeTheme">
        <item name="android:colorPrimary">#EF6C00</item>
        <item name="android:colorPrimaryDark">#E65100</item>
    </style>

    <style name="BrownTheme">
        <item name="android:colorPrimary">#795548</item>
        <item name="android:colorPrimaryDark">#3E2723</item>
    </style>

    <style name="BlueGreyTheme">
        <item name="android:colorPrimary">#607D8B</item>
        <item name="android:colorPrimaryDark">#37474F</item>
    </style>

    <style name="GreyTheme">
        <item name="android:colorPrimary">#616161</item>
        <item name="android:colorPrimaryDark">#424242</item>
