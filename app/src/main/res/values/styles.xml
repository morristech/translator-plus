<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#757575</item>
    </style>

    <style name="LanguageSpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="ToolBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#24000000</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="Widget.AppTheme.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:theme">@style/ToolBarThemeOverlay</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainBottomButton">
        <item name="android:background">@drawable/bg_clickable_circle</item>
        <item name="android:tint">#717171</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Themes -->

    <style name="BlueTheme">
        <item name="colorPrimary">#198ADF</item>
        <item name="colorPrimaryDark">#1976D2</item>
    </style>

    <style name="RedTheme">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
    </style>

    <style name="IndigoTheme">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
    </style>

    <style name="PinkTheme">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
    </style>

    <style name="CyanTheme">
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#0097A7</item>
    </style>

    <style name="GreenTheme">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
    </style>

    <style name="OrangeTheme">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
    </style>

    <style name="BrownTheme">
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
    </style>

    <style name="BlueGreyTheme">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
    </style>

    <style name="GreyTheme">
        <item name="colorPrimary">#9E9E9E</item>
